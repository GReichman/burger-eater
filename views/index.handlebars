<h1>Eat-Da-Burger!</h1>

<div>

<ul>
    {{#each uneaten}}
    <li>
        <p>
            {{id}}. {{burger_name}} 
            <span><button class="eatButton" data-id="{{id}}">Eat Me!</button></span>
        </p>
    </li>
    {{/each}}
</ul>

<ul>
    {{#each eaten}}
    <li>
        <p>{{id}}. {{burger_name}}</p>
    </li>
    {{/each}}
</ul>

</div>

<div>
    <h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>