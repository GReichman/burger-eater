<div class="container" id="contentContainer">
<h1 id="header">Eat-Da-Burger!</h1>

<div class="row" id="burgerRow">
<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 burgerCol">
<ul class="list-group">
    {{#each uneaten}}
    <li class="list-group-item">
        <p>
            {{id}}. {{burger_name}} 
            <span><button class="eatButton" data-id="{{id}}">Eat Me!</button></span>
        </p>
    </li>
    {{/each}}
</ul>
</div>

<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 burgerCol">
<ul class="list-group">
    {{#each eaten}}
    <li class="list-group-item">
        <p>{{id}}. {{burger_name}}</p>
    </li>
    {{/each}}
</ul>
</div>
</div>
{{!-- burger row end --}}


<div class="row justify-content-center" id="newBurgerRow">
    <div class="col-4">
    <h2>Add a Burger</h2>

<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" class="form-control" id="burger" name="name">
  </div>

  <button class= "btn btn-dark" type="submit">Add Burger</button>
</form>
</div>
</div>
{{!-- end new burger row --}}

</div>